{
  "name": "aihangout-platform",
  "version": "1.0.0",
  "description": "AI Hangout - Crowdsourced AI Problem Solving Platform",
  "main": "src/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "npm run build:worker && npm run build:frontend",
    "build:worker": "esbuild src/worker.js --bundle --format=esm --outfile=dist/worker.js",
    "build:frontend": "cd frontend && npm run build",
    "setup": "npm install && cd frontend && npm install",
    "verify-deployment": "node verify-deployment.js"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "bcryptjs": "^2.4.3",
    "itty-router": "^4.0.0",
    "jose": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "esbuild": "^0.20.2",
    "wrangler": "^4.62.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
